# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
}

order += "disk /"
order += "volume master"
order += "keyboard_layout"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "sysdata"
order += "load"
order += "tztime local"

keyboard_layout {
    layouts = ["us", "no"]
    color_us = "#ffffff"
    color_no = "#ffffff"
    cache_timeout = 1
}

wireless _first_ {
    format_up = "%essid %ip"
    format_down = "down"
}

ethernet _first_ {
    format_up = "%ip (%speed)"
    format_down = "down"
}

battery all {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

sysdata {
    format = "{mem_used_percent}%"
}

load {
    format = "%1min"
}

volume master {
    format = "%volume"
    format_muted = "muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

disk "/" {
    prefix_type = decimal
    format = "%avail"
}
