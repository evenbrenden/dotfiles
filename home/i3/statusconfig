# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = i3bar
    colors = true
    interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "memory"
order += "load"
order += "tztime local"

volume master {
    format = "%volume"
    format_muted = "Mute"
}

wireless _first_ {
    format_up = "%essid (%quality)"
    format_down = "Down"
    format_quality = "%d%s"
}

ethernet _first_ {
    format_up = "%ip (%speed)"
    format_down = "Down"
}

battery all {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    integer_battery_capacity = true
    status_chr = "Charging"
    status_bat = "Battery"
    status_unk = "Unknown"
    status_full = "Full"
}

disk "/" {
    prefix_type = binary
    format = "%avail"
}

memory {
    format = "%available"
}

load {
    format = "%1min"
}

tztime local {
    format = "Week %V %Y-%m-%d %H:%M:%S"
}
