# audio control
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -3dB
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +3dB
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# playback control
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# wifi control
bindsym XF86WLAN exec --no-startup-id python3 ~/bin/toggle_wifi.py

# things xrandr
bindsym $mod+Ctrl+a exec --no-startup-id autorandr --change
bindsym $mod+Ctrl+6 exec --no-startup-id xrandr --dpi 96; restart
bindsym $mod+Ctrl+7 exec --no-startup-id xrandr --dpi 120; restart
bindsym $mod+Ctrl+8 exec --no-startup-id xrandr --dpi 144; restart

# brightness control
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 10%+

# notifications control
bindsym $mod+n exec --no-startup-id dunstctl set-paused toggle && pkill -x -USR1 i3status

# lock screen
bindsym $mod+Shift+l exec loginctl lock-session $XDG_SESSION_ID

# sleep
bindsym $mod+Shift+s exec systemctl hybrid-sleep

# start i3bar to display a workspace bar
bar {
    status_command bash ~/bin/i3status.sh
}

# set some alsa state
exec --no-startup-id amixer -q -c 0 set 'Mic Mute-LED Mode' 'Follow Mute'
exec --no-startup-id amixer -q -c 0 set 'Auto-Mute Mode' 'Disabled'

# start some programs
exec sakura
exec --no-startup-id nm-applet
exec --no-startup-id dunst
