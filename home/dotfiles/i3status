# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = i3bar
    colors = true
    interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "tztime local"

disk "/" {
    prefix_type = decimal
    format = "%avail"
}

volume master {
    format = "%volume"
    format_muted = "mute"
}

wireless _first_ {
    format_up = "%essid (%quality)"
    format_down = "down"
    format_quality = "%d%s"
}

ethernet _first_ {
    format_up = "%ip (%speed)"
    format_down = "down"
}

battery all {
    format = "%status %percentage %remaining"
    format_down = ""
    integer_battery_capacity = true
    status_chr = "charging"
    status_bat = "battery"
    status_unk = "unknown"
    status_full = "full"
}

load {
    format = "%1min"
}

tztime local {
    format = "week %V %Y-%m-%d %H:%M:%S"
}
