general {
    output_format = i3bar
    colors = true
    interval = 5
}

order += "volume master"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "memory"
order += "load"
order += "tztime local"

volume master {
    format = "%volume"
    format_muted = "Mute"
}

path_exists VPN {
    path = "/sys/class/net/tun0"
    format = "%title"
    format_down = ""
}

wireless _first_ {
    format_up = "%essid (%quality)"
    format_down = ""
    format_quality = "%d%s"
}

ethernet _first_ {
    format_up = "%ip (%speed)"
    format_down = ""
}

battery all {
    format = "%status %percentage %remaining"
    format_down = "No battery"
    integer_battery_capacity = true
    status_chr = "Charging"
    status_bat = "Battery"
    status_unk = "Unknown"
    status_full = "Full"
}

disk "/" {
    prefix_type = binary
    format = "%avail"
}

memory {
    format = "%available"
}

load {
    format = "%1min"
}

tztime local {
    format = "Week %V %Y-%m-%d %H:%M:%S"
}
